<?php

$arg = '[data_to_sene_to_console, whole_array = false, iterate_array = true, start_point_to_iterate = 0, stop_point_to_iterate = 0]';

/* *****
 By default you only need to send 'data_to_send_to_console'. Array will not be iterated. To iterate array set 'whole_array' to false and 'iterate_array' to true
*/

function c_log($data, $whole_array = true, $iterate_array = false, $start = 0, $end = 0)
{
    if (gettype($data) === "string" || gettype($data) === "integer") {
        $s_a = str_split($data, 20)[0];
        $c_1 = $s_a[0];
        $c_2 = isset($s_a[1]);
        if ($c_1 !== "[" && $c_1 !== "{") {
            $string = $data;
            $script = <<<EOF
            console.log(`$string`);
        EOF;
            echo "<script>";
            echo $script;
            echo "</script>";
        }
        if ($c_1 === "[") {
            if ($iterate_array && !$whole_array && $end === 0) {
                $script = <<<EOL
                const arr = $data;
                for (let x = 0; x < arr.length; x++) {
                    // console.log(x);
                    console.log(arr[x]);
                }
                
            EOL;
                echo "<script>";
                echo $script;
                echo "</script>";
            }

            if ($iterate_array && !$whole_array && $end !== 0) {
                $script = <<<EOL
                const arr = $data;
                for (let x = $start; x < $end; x++) {
                    // console.log(x);
                    console.log(arr[x]);
                }
                
            EOL;
                echo "<script>";
                echo $script;
                echo "</script>";
            }

            if (!$iterate_array && $whole_array) {
                $script = <<<EOL
                const arr = $data;
                    console.log(arr);
            EOL;
                echo "<script>";
                echo $script;
                echo "</script>";
            }
        }
        if ($c_1 === "{") {
            $script = <<<EOL
                const arr = $data;
                    console.log(arr);
            EOL;
            echo "<script>";
            echo $script;
            echo "</script>";
        }
    }
    if (gettype($data) === "array") {
        if ($iterate_array && !$whole_array && $end !== 0) {
            $array = json_encode($data);
            $script = <<<EOL
                const arrIterate = $array;
                for (let x = $start; x < $end; x++) {
                    console.log(x);
                    console.log(arrIterate[x]);
                }

            EOL;
            echo "<script>";
            echo $script;
            echo "</script>";
        }
        if ($iterate_array && !$whole_array && $start === 0 && $end === 0) {
            $array = json_encode($data);
            $script = <<<EOL
                const arrIterate = $array;
                for (let x = 0; x < arrIterate.length; x++) {
                    console.log(x);
                    console.log(arrIterate[x]);
                }

            EOL;
            echo "<script>";
            echo $script;
            echo "</script>";
        }

        if (!$iterate_array && $whole_array) {
            $array = json_encode($data);
            $script = <<<EOL
                const arrWhole = $array;
                    console.log(arrWhole);
            EOL;
            echo "<script>";
            echo $script;
            echo "</script>";
        }
    }
    if (gettype($data) === "object") {
        $obj = json_encode($data);
        $script = <<<EOL
            console.log($obj);
            EOL;
        echo "<script>";
        echo $script;
        echo "</script>";
    }
}
